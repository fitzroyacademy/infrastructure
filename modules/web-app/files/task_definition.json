[
  {
      "name": "xray-daemon",
          "image": "amazon/aws-xray-daemon",
          "cpu": 32,
          "memoryReservation": 256,
          "portMappings" : [
              {
                  "hostPort": 2000,
                  "containerPort": 2000,
                  "protocol": "udp"
              }
          ],
          "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                  "awslogs-group": "/ecs/web-app/${environment}/xray",
                  "awslogs-region": "us-east-2",
                  "awslogs-stream-prefix": "ecs"
              }
          }
         },
    
    {
      "dnsSearchDomains": null,
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": null,
        "options": {
          "awslogs-group": "/ecs/web-app/${environment}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "entryPoint": null,
      "portMappings": [
        {
          "hostPort": ${container_port},
          "protocol": "tcp",
          "containerPort": ${container_port}
        }
      ],
      "command": null,
      "linuxParameters": null,
      "cpu": 128,
      "environment": [
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "DB_USER",
          "value": "fitzroyacademy"
        },
        {
           "name": "DB_HOST",
          "value": "${db_endpoint}"
        },
         {
           "name": "DB_ENDPOINT",
          "value": "${db_endpoint}"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "0"
        },
        {
          "name": "DB_OPTIONS",
          "value": ""
        }
      ],
      "resourceRequirements": null,
      "ulimits": null,
      "dnsServers": [],
      "mountPoints": [],
      "workingDirectory": null,
      "secrets": [
        {
        "name": "DB_PASSWORD",
        "valueFrom": "${db_password_arn}"
        },
        {
        "name": "APP_SECRET_KEY",
        "valueFrom": "${secret_key_arn}"
        },
        {
          "name": "MAILGUN_API_KEY",
          "valueFrom": "${mailgun_api_key_arn}"
        },
        {
          "name":"MAILGUN_API_URL",
          "valueFrom": "${mailgun_url_arn}"
        }
      ],
      "dockerSecurityOptions": null,
      "memory": 256,
      "memoryReservation": 128,
      "volumesFrom": [],
      "stopTimeout": null,
      "image": "${docker_image}",
      "startTimeout": null,
      "dependsOn": null,
      "disableNetworking": null,
      "interactive": null,
      "healthCheck": {
        "retries": 3,
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:${container_port}/ || exit 1"
        ],
        "timeout": 10,
        "interval": 30,
        "startPeriod": 10
      },
      "essential": true,
      "links": null,
      "hostname": null,
      "extraHosts": null,
      "pseudoTerminal": null,
      "user": null,
      "readonlyRootFilesystem": null,
      "dockerLabels": null,
      "systemControls": null,
      "privileged": null,
      "name": "web-app-${environment}"
  }
]