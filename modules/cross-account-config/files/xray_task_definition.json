[
         {
          "name": "xray-daemon",
          "image": "amazon/aws-xray-daemon",
          "cpu": 32,
          "memoryReservation": 256,
          "portMappings" : [
              {
                  "hostPort": 2000,
                  "containerPort": 2000,
                  "protocol": "udp"
              }
          ],
          "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                  "awslogs-group": "/ecs/web-app-tf/xray",
                  "awslogs-region": "us-east-2",
                  "awslogs-stream-prefix": "ecs"
              }
          }
         }
    ]